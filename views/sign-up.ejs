<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head"); %>
  <link rel="stylesheet" href="/stylesheets/sign-up-form.css">
</head>
<body>
    <%- include("./partials/header", {user: undefined}); %>
    <main>
  <form action="" method="POST">
    <h1>Sign Up</h1>
    <div class="name-inputs">
    <div class="first-name-container">
    <label for="firstname">First name</label>
    <input name="firstname" type="text" value="<%= user.first_name %>" />
    <% if(errors.firstname) { %>
      <p class="error"><%=errors.firstname %></p>
   <% }
  %>
  </div>
  <div class="last-name-container">
    <label for="lastname">Last name</label>
    <input name="lastname"type="text" value="<%= user.last_name %>"/> 
    <% if(errors.lastname) { %>
      <p class="error"><%=errors.lastname %></p>
   <% }
  %>
  </div>
</div>
    <label for="username">Email</label>
    <input name="username" type="email" value="<%= user.username %>"/>
    <% if(errors.username) { %>
      <p class="error"><%=errors.username %></p>
   <% }
  %>
    <div class="password-inputs">
    <div class="password-container">
    <label for="password">Password</label>
    <input name="password" type="password" value="<%= user.password %>"/>
    <% if(errors.password) { %>
      <p class="error"><%=errors.password %></p>
   <% }
  %>
    </div>
    <div class="confirmPassword-container">
    <label for="confirmPassword">Confirm Password</label>
    <input name="confirmPassword" type="password"  value="<%=confirmPassword ? confirmPassword : '' %>"/>
    <% if(errors.confirmPassword) { %>
      <p class="error"><%=errors.confirmPassword%></p>
   <% }
  %>
  </div>
</div>
    <button class="sign-up-btn">Sign Up</button>
  </form>
</main>
</body>
</html>
